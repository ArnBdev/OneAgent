{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["coreagent/**/*", "scripts/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    // Exclude VS Code extension sources from root project type-check; it has its own tsconfig and deps
    "coreagent/vscode-extension/**"
  ]
}
