{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Install OneAgent Extension",
      "type": "shell",
      "command": "code",
      "args": ["--install-extension", "${workspaceFolder}/oneagent-professional-1.0.0.vsix"],
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "always"
      },
      "dependsOn": "Package Extension"
    },
    {
      "label": "Package Extension",
      "type": "shell",
      "command": "vsce",
      "args": ["package"],
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "always"
      },
      "dependsOn": "npm: compile"
    }
  ]
}
