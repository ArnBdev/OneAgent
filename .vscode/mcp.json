{
  "servers": {
    "oneagent": {
      "type": "stdio",
      "command": "node",
      "args": ["-r", "ts-node/register", "coreagent/server/unified-mcp-stdio.ts"],
      "env": {
        "ONEAGENT_MCP_QUIET": "1"
      },
      "dev": {
        "watch": "coreagent/**/*.ts",
        "debug": { "type": "node" }
      }
    }
  }
}
